{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "backend/dist"
	},
	"include": ["backend/src/**/*", "backend/prisma/seed.js"],
	"exclude": ["node_modules", "backend/dist"]
}
